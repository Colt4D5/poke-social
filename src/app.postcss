a {
  cursor: pointer;
}

a.button, button {
  border-radius: 4rem;
}

.padding-block {
  width: 100%;
  padding-block: 1.25rem;
  border-bottom: 1px solid var(--primary-focus);
}

h1, h2, h3, h4, h5, h6 {
  --typography-spacing-vertical: 1.5rem;
}